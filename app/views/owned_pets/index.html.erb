<h1><%= "#{current_user.first_name}'s Pets" %></h1>

<% @owned_pets.each do |pet| %>
	<p>Species: <%= pet.species %></p>
	<p>Breed: <%= pet.breed %></p>
	<p>Currently own this pet: <%= pet.current %></p>
	<p>Length of ownership: <%= pet.length_of_ownership %></p>
	
	<% if pet.current != true %>
		<%= pet.explanation %>
	<% end %>	
<br>
<% end %>

