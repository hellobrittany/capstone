            <label><input type="checkbox" v-model="guShedding"> Shedding</label>  
            <br>
            <label><input type="checkbox" v-model="guAllergies"> Allergies</label>  
            <br>
            <label><input type="checkbox" v-model="guNewPartner"> Spouse/Partner does not like the Dog</label>  
            <br>
            <label><input type="checkbox" v-model="guAggressive"> Aggressive</label>  
            <br>
            <label><input type="checkbox" v-model="guOther"> Other</label>  
            <br>
        </div>
        <button class="btn-lg btn-default" v-on:click="updateOwnershipProfile(newOwnershipProfile)">Submit</button>
      </div>
  </div>  

  <!-- OWNERSHIP PROFILE END  -->












