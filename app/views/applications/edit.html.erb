          <label><h5>Locally?</h5></label>
          <input type="text" class="form-control" id="exampleInputEmail1" v-model="moveLocallyPlan">
          <br>
          <label><h5>Out of State?</h5></label>
          <input type="text" class="form-control" id="exampleInputEmail1" v-model="moveFarPlan">
          <br>
          <label><h5>Internationally?</h5></label>
          <input type="text" class="form-control" id="exampleInputEmail1" v-model="moveInternationallyPlan">
        </div>
