
<div class="page-header text-center">
  <h1>Fill out your application for <%= @application.dog.name %></h1>
</div>

<div class="row">

<div id="app" class="col-xs-10 col-sm-offset-1">


<!-- progress bar -->
<div class="progress-wrapper">
    <div class="total-bar">
    </div> 

    <div v-bind:class="tracker" class="tracker-bar">  
    </div>

    <ul class="steps-wrapper">
        <li class="step pb-complete">1</li>
        <li v-bind:class="{ 'pb-complete': pbLifestyleInfo }" class="step" v-on:click="changeScene('lifestyle')">2</li>
        <li v-bind:class="{ 'pb-complete': pbOwnershipHistory }" class="step" v-on:click="changeScene('ownership history')">3</li>
        <li v-bind:class="{ 'pb-complete': pbPets }" class="step" v-on:click="changeScene('pets')">4</li>
        <li v-bind:class="{ 'pb-complete': pbOwnershipProfile }" class="step" v-on:click="changeScene('ownership profile')">5</li>
        <li v-bind:class="{ 'pb-complete': pbDwellingInfo }" class="step" v-on:click="changeScene('dwelling')">6</li>
    </ul>
    
</div>
<!-- progress bar end -->

<!-- passing application id to ajax calls -->
<div id="application-id" class="hidden"><%= @application.id %></div>

<!-- LIFESTYLE INFO -->
<h3 v-on:click="changeScene('lifestyle')">Lifestyle Information</h3>

<div class="container" id="LifestyleInfo" v-if="scene === 'lifestyle'">

  <div class="lifestyle-info">
    <br>
    <h4>What are your primary reasons for wanting a dog? (Check all that apply)</h4>
    <div class="checkbox">
      <label>
         <input type="checkbox" v-model="reasonCompanion">Companion for You
        <br>
        <input type="checkbox" v-model="reasonKids">For your Kids
        <br>
        <input type="checkbox" v-model="reasonGift">Gift   
        <br>
        <input type="checkbox" v-model="reasonOtherPet">For your Other Pet(s) 
        <br>
        <input type="checkbox" v-model="reasonWatchdog">Watchdog 
        <br>
      </label>
    </div>
    <br>

    <h4>Does anyone in your household have allergies?</h4>
